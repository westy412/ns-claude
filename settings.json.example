{
  "env": {
    "MAX_THINKING_TOKENS": "31999",
    "PERPLEXITY_API_KEY": "your-perplexity-api-key-here"
  },
  "permissions": {
    "allow": [
      "Read(**)",
      "Glob(**)",
      "Grep(**)",
      "LS(**)",
      "WebSearch",
      "TodoRead",
      "TodoWrite(**)",
      "Task(**)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(git blame:*)",
      "Bash(git branch:*)",
      "Bash(git remote -v:*)",
      "Bash(git config --get:*)",
      "Bash(ls:*)",
      "Bash(cat :*)",
      "Bash(less :*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(tree:*)",
      "Bash(pwd:*)",
      "Bash(wc:*)",
      "Bash(diff :*)",
      "Bash(sed -n:*)",
      "Bash(awk:*)",
      "Bash(cut:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(basename :*)",
      "Bash(dirname :*)",
      "Bash(realpath :*)",
      "Bash(readlink :*)",
      "Bash(curl:*)",
      "Bash(jq:*)",
      "Bash(yq eval:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(node:*)",
      "Bash(npm list:*)",
      "Bash(npm run:*)",
      "Bash(npx:*)",
      "Bash(black --check:*)",
      "Bash(black --diff:*)",
      "Bash(pylint:*)",
      "Bash(flake8:*)",
      "Bash(mypy:*)",
      "Bash(eslint:*)",
      "Bash(pytest:*)",
      "Bash(make test:*)",
      "Bash(npm test:*)",
      "Bash(make -n:*)",
      "Bash(man :*)",
      "Bash(pydoc:*)",
      "Bash(which :*)",
      "Bash(type :*)",
      "Bash(echo :*)",
      "Bash(printf :*)",
      "Bash(test :*)",
      "Bash(true:*)",
      "Bash(false:*)",
      "Bash(:* | grep:*)",
      "Bash(:* | jq:*)",
      "Bash(:* | head:*)",
      "Bash(:* | tail:*)",
      "Bash(:* | wc:*)",
      "Bash(:* | sort:*)",
      "Bash(:* | uniq:*)"
    ],
    "deny": []
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.config/claude-notify/clear-state.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.config/claude-notify/notify.sh ready Hero"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.config/claude-notify/notify.sh permission Funk"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true,
    "commit-commands@claude-code-plugins": true,
    "perplexity@perplexity-mcp-server": true,
    "claude-hud@claude-hud": true,
    "ralph-wiggum@claude-code-plugins": true,
    "code-simplifier@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}
